@model SimplexDataViewModel 
@{
    int j;
}
<div class="text-left">
    <h1 class="display-4">Решение задачи линейного программирования симплекс методом</h1>
    <form method="post" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#results">
        <div class="form-group">
            <table class="table-borderless">
                <thead>
                    <tr>
                        @for (var i = 1; i <= @ViewBag.Sel1; i++)
                        {

                            <th scope="col">X <sub>@i</sub></th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < @ViewBag.Sel2; i++)
                    {

                        <tr>
                            @for (j = 0; j < @ViewBag.Sel1; j++)
                            {

                                <td> <input type="text" style="width:75px" class="form-control" pattern="^-?[0-9]+$" required value="0" asp-for="originalLimits[i][j]"></td>
                            }
                            <td>
                                <select id="s" asp-for="originalLimits[i][j]">
                                    <option value="-1">≥</option>
                                    <option value="0">=</option>
                                    <option value="1">≤</option>
                                </select>
                            </td>
                            <td> <input type="text" style="width:75px" class="form-control" pattern="^-?[0-9]+$" required value="0" asp-for="originalLimits[i][j+1]"></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <div class="form-group">
            <p class="">Функция F(x)</p>
            <table class="table-borderless">
                <thead>
                    <tr>
                        @for (var i = 1; i <= @ViewBag.Sel1; i++)
                        {

                            <th scope="col">X<sub>@i</sub></th>

                        }
                        <th scope="col">C</th>
                        <th scope="col">Extr</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @for (j = 0; j <= @ViewBag.Sel1; j++)
                        {
                            <td> <input type="text" style="width:75px" class="form-control" pattern="^-?[0-9]+$" required value="0" asp-for="originalFunc[j]"></td>
                        }

                        <td>—></td>
                        <td>
                            <select id="mode" asp-for="type">
                                <option value="1">min</option>
                                <option value="-1">max</option>
                            </select>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="form-group custom-control custom-switch">
            <input type="checkbox" class="custom-control-input" id="customSwitch1" asp-for="NumberRepresent">
            <label class="custom-control-label" for="customSwitch1">Использовать дроби</label>
        </div>
        <button type="submit" class="btn btn-primary">Далее</button>
        <input type="hidden" asp-for="N" value="@ViewBag.Sel2" />
        <input type="hidden" asp-for="M" value="@ViewBag.Sel1" />
    </form>
    <div id="results">

    </div>
</div>
